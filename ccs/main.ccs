body {
    background-color: #f0f8ff;
}

img {
    width: 100%;
    border-radius: 8px;
    opacity: 0.9;
}

h1 {
    color: #1e90ff;
    font-size: 2em;
    font-weight: bold;
    text-decoration: underline;
}

p {
    color: #333;
    line-height: 1.6;
}

a {
    color: #1e90ff;
    text-decoration: none;
}

.container {
    padding: 20px;
    margin: auto;
    max-width: 1200px;
}
